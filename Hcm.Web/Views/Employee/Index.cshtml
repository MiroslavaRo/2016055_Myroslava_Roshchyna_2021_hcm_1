@model IEnumerable<Hcm.Web.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <a asp-action="Create"
               class="btn btn-primary btn-sm float-right" style="padding:6px 20px">Create</a>
            <div class="text-center">
                <h3>Employees</h3>
            </div>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Avatar)
                    </th>
                    <th>
                        Names
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.Avatar != null)
                            {
                                <img src="~/hcm/img/@item.EmployeeId.ToString()/@item.Avatar" style=" width: 40px; border-radius: 25%;">
                            }
                            else
                            {
                                <img src="~/hcm/img/noavatar.png" style="width: 40px; border-radius: 25%;">
                            }
                        </td>  
              

                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-danger btn-sm float-right hcm-btn">Delete</a>
                            <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="btn btn-info btn-sm float-right mr-2 hcm-btn">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>